{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2021",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  }
}